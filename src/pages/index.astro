---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import IntroCard from "../components/IntroCard.astro";
import ContactsCard from "../components/ContactsCard.astro";
import TimeZone from "../components/TimeZoneCard.astro";
import AboutMe from "../components/AboutMe.astro";
import Now from "../components/Now.astro";
import Globe from "../components/Globe";
import Button from "../components/Button.astro";
import Project from "../components/Project.astro";
import { LINKS } from "../lib/constants";
import { Icon } from 'astro-icon/components'
---

<script>
  import { stagger, spring, timeline, type TimelineDefinition } from "motion";
  import { loaderAnimation } from "../lib/constants";
  const cards = document.querySelectorAll(".card");

  const sequence = [
    loaderAnimation,
    [
      cards,
      { y: ["40%", "0%"], opacity: [0, 1] },
      {
        at: "-0.1",
        duration: 0.4,
        delay: stagger(0.3),
        easing: spring({ velocity: 100, stiffness: 50, damping: 10 }),
      },
    ],
  ];

  timeline(sequence as TimelineDefinition);
</script>

<Layout
  title="Tat Chan - Full Stack Developer"
  description=""
>
  <main
    class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-3 md:p-6 lg:h-screen lg:grid-rows-8 lg:grid-cols-4 lg:gap-4 lg:max-h-[800px]"
  >
    <IntroCard />
    <AboutMe />
    <ContactsCard />
    <Project
      title="Order Management System"
      icons={["ri:nextjs-fill", "mdi:language-typescript", "ri:reactjs-fill"]}
      demoLink={LINKS.proj1}
    />
    <Project
      title="SVD Image Compression"
      icons={["ri:nextjs-fill", "mdi:language-python","mdi:aws", "mdi:docker", "mdi:terraform"]}
      githubLink={LINKS.proj2_git}
      demoLink={LINKS.proj2_demo}
    />
    <Project
      title="Teamcook"
      icons={["mdi:language-python","ri:reactjs-fill","mdi:material-ui", "ri:javascript-fill", "mdi:bread-slice"]}
      githubLink={LINKS.proj3}
    />
    <Project
      title="Youtube Clone"
      icons={["ri:nextjs-fill", "mdi:language-python", "mdi:google-cloud"]}
      demoLink={LINKS.proj4}
    />
    <Card
      colSpan="md:col-span-1"
      rowSpan="md:row-span-2 flex gap-4"
      title="My Résumé"
      href="./tat_chan_resume.pdf"
    />
  </main>
</Layout>
