---
// InternshipPopup.astro
// import { Dialog } from '@headlessui/react'

const internships = [
  {
    company: "Experia Tech",
    role: "Software Engineering Intern",
    period: "Summer 2024"
  },
  {
    company: "Ocean City Trading",
    role: "Software Engineering Intern",
    period: "Summer 2024"
  },
  {
    company: "UTRGV",
    role: "Undergrad Research Intern",
    period: "Summer 2023"
  },
  {
    company: "nCino Inc",
    role: "Software Development Intern",
    period: "Summer 2022"
  },
];
---

<div class="internship-popup">
  <button id="popup-trigger" class="inline-flex items-center gap-1 font-bold text-red-400 hover:text-red-300 transition-colors cursor-pointer">
    FOUR
  </button>

  <div id="popup-overlay" class="hidden fixed inset-0 bg-black bg-opacity-50 z-40"></div>
  
  <div id="popup-content" class="hidden fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 max-w-md w-full bg-gray-900 border border-gray-800 rounded-lg shadow-xl z-50 p-6">
    <div class="relative">
      <button id="close-popup" class="absolute right-0 top-0 text-gray-400 hover:text-gray-300">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      
      <h2 class="text-xl font-semibold mb-4 text-gray-100">Internship Experience</h2>
      
      <div class="space-y-4">
        {internships.map((internship) => (
          <div class="flex items-start gap-3 p-3 rounded-lg bg-gray-800 hover:bg-gray-750 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mt-1 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <div>
              <h3 class="font-semibold text-gray-100">{internship.company}</h3>
              <p class="text-sm text-gray-300">{internship.role}</p>
              <p class="text-sm text-gray-400">{internship.period}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>

<script>
  const trigger = document.getElementById('popup-trigger');
  const overlay = document.getElementById('popup-overlay');
  const content = document.getElementById('popup-content');
  const closeButton = document.getElementById('close-popup');

  function openPopup() {
    overlay?.classList.remove('hidden');
    content?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closePopup() {
    overlay?.classList.add('hidden');
    content?.classList.add('hidden');
    document.body.style.overflow = 'auto';
  }

  trigger?.addEventListener('click', openPopup);
  closeButton?.addEventListener('click', closePopup);
  overlay?.addEventListener('click', closePopup);

  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closePopup();
  });
</script>

<style>
  .internship-popup {
    position: relative;
    display: inline-block;
  }
  
  /* Add a smooth fade-in animation */
  #popup-overlay:not(.hidden),
  #popup-content:not(.hidden) {
    animation: fadeIn 0.2s ease-out;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>